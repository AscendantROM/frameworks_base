<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle"
            android:tint="#90808080">
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp"
                     android:bottomLeftRadius="10dp " android:bottomRightRadius="10dp "/>
            <size android:height="@dimen/brightness_drawable_height" />
            <solid android:color="#90808080" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
    <clip android:clipOrientation="horizontal" android:gravity="left">
            <selector>
                <item android:state_enabled="false"
                    android:drawable="@android:color/transparent" />
                <item>
                    <shape android:shape="rectangle"
                        android:tint="?android:attr/colorAccent">
                        <corners android:topLeftRadius="0dp" android:topRightRadius="0dp"
                                 android:bottomLeftRadius="10dp " android:bottomRightRadius="10dp "/>
                        <size android:height="@dimen/brightness_drawable_height" />
                        <solid android:color="?android:attr/colorAccent" />
                    </shape>
                </item>
            </selector>
    </clip>
    </item>

    <item android:gravity="center_vertical|end"
          android:right="@dimen/brightness_drawable_dots_padding">
           <shape android:shape="oval">
                <stroke android:width="2.0dip" android:color="#ffc0c0c0" />
                <size android:height="@dimen/brightness_drawable_button_height" />
                <size android:width="@dimen/brightness_drawable_button_width" />
                <solid android:color="#95c0c0c0" />
            </shape>
    </item>

    <item android:gravity="center_vertical|start"
          android:left="@dimen/brightness_drawable_dots_padding">
            <shape android:shape="oval">
                <stroke android:width="2.0dip" android:color="#ffc0c0c0" />
                <size android:height="@dimen/brightness_drawable_button_height" />
                <size android:width="@dimen/brightness_drawable_button_width" />
                <solid android:color="#49c0c0c0" />
            </shape>
    </item>
</layer-list>
